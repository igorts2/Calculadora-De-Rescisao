@{
    ViewBag.Title = "Calculadora de Rescisão";
}

<style>
   
    form {
        max-width: 400px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
    }

    div.form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
    }

    input[type="date"],
    input[type="number"],
    select {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    button[type="submit"] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    button[type="submit"]:hover {
        background-color: #45a049;
    }
</style>

<h2>Calculadora de Rescisão</h2>

<form method="post" action="@Url.Action("CalcularRescisao", "Rescisao")">
    <div class="form-group">
        <label for="dataInicio">Data de Início da Relação de Trabalho:</label>
        <input type="date" id="dataInicio" name="DataInicio" required>
    </div>
    <div class="form-group">
        <label for="dataFim">Data do Fim da Relação de Trabalho:</label>
        <input type="date" id="dataFim" name="DataFinal" required>
    </div>
    <div class="form-group">
        <label for="motivoDemissao">Motivo da Demissão:</label>
        <select id="motivoDemissao" name="Motivo" required>
            <option value="">Selecione o motivo da demissão</option>
            <option value="Pediu demissão">Pediu demissão</option>
            <option value="Demissão sem justa causa">Demissão sem justa causa</option>
            <option value="Demissão com justa causa">Demissão com justa causa</option>
        </select>
    </div>
    <div class="form-group">
        <label for="ultimoSalario">Último Salário:</label>
        <input type="number" id="ultimoSalario" name="Salario" required>
    </div>
    <div class="form-group">
        <label for="avisoPrevio">Aviso Prévio:</label>
        <select id="avisoPrevio" name="Aviso" required>
            <option value="trabalhado">Trabalhado</option>
            <option value="indenizado">Indenizado</option>
        </select>
    </div>
    <div class="form-group">
        <label for="feriasVencidas">Férias Vencidas:</label>
        <select id="feriasVencidas" name="Ferias" required>
            <option value="sim">Sim</option>
            <option value="não">Não</option>
        </select>
    </div>
    <button type="submit">Calcular</button>
</form>
